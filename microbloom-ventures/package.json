{
  "name": "microbloom-ventures",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:frontend dev:server",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:server": "npm --workspace server run dev",
    "build": "npm-run-all build:frontend build:server",
    "build:frontend": "npm --workspace frontend run build",
    "build:server": "npm --workspace server run build",
    "lint": "npm-run-all lint:frontend lint:server",
    "lint:frontend": "npm --workspace frontend run lint",
    "lint:server": "npm --workspace server run lint",
    "migrate": "npx prisma migrate dev",
    "seed": "npx ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/pg": "^8.15.6",
    "@types/swagger-ui-express": "^4.1.8",
    "npm-run-all": "^4.1.5",
    "prisma": "^7.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.1.0",
    "pg": "^8.16.3",
    "slugify": "^1.6.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  }
}
